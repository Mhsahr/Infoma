@{
}


<link rel="stylesheet" href="~/css/FormStyle.css" />

<div class="form">
    <form asp-action="SignUp" method="post">
        @model User

        @{
            ViewData["Title"] = "ثبت نام";
        }

        <h1>@ViewData["Title"]</h1>

        <div class="row" dir="rtl">
            <div class="col mb-2 p-2">
                <input asp-for="Firstname" type="text" id="Firstname" name="Firstname" value="" placeholder="نام">
            </div>
        </div>

        <div class="row" dir="rtl">
            <div class="col mb-2 p-2">
            <input asp-for="Lastname" type="text" id="Lastname" name="Lastname" value="" placeholder="نام خانوادگی" />
            </div>
        </div>

        <div class="row" dir="rtl">
            <div class="col mb-2 p-2">
            <input asp-for="Email" type="text" id="Email" name="Email" value="" placeholder="ایمیل" />
            </div>
        </div>
        <div class="row">
            <div class="col mb-2 p-2">
                <button class="btnn">ثبت نام</button>
            </div>
        </div>
    </form>
</div>



